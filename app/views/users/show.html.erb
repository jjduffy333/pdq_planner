<div class="page-header">
  <h3>Account Information for <%= @user.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

      <dt>Name</dt>
      <dd><%= @user.name %></dd>

      <dt>Profile picture</dt>
      <dd><img src="<%= @user.profile_picture %>" class="img-responsive"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A User has many post_meeting_checks -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Open Check Assignments
      </li>

      <% @user.post_meeting_checks.each do |post_meeting_check| %>
        <li class="list-group-item">
          <a href="/post_meeting_checks/<%= post_meeting_check.id %>">
            <%= post_meeting_check.task %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/post_meeting_checks/<%= post_meeting_check.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == post_meeting_check.user %>
              <a href="/post_meeting_checks/<%= post_meeting_check.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_post_meeting_check/<%= post_meeting_check.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

