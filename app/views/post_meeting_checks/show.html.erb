<div class="page-header">
  <h3>Post Meeting Check #<%= @post_meeting_check.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Meeting ID</dt>
      <dd>
        <% if @post_meeting_check.meeting.present? %>
          <a href="/meetings/<%= @post_meeting_check.check_id %>">
            <%= @post_meeting_check.meeting.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>Assigned To</dt>
      <dd>
        <% if @post_meeting_check.user.present? %>
          <a href="/users/<%= @post_meeting_check.user_id %>">
            <%= @post_meeting_check.user.name %>
          </a>
        <% end %>
      </dd>

      <dt>Task</dt>
      <dd><%= @post_meeting_check.task %></dd>

      <dt>Description</dt>
      <dd><%= @post_meeting_check.description %></dd>

      <dt>Next check date</dt>
      <dd><%= @post_meeting_check.next_check_date %></dd>

    </dl>

  <div class="btn-group btn-group-xs btn-group-justified">
      <a href="/post_meeting_checks" class="btn btn-default">
        Back
      </a>
      <a href="/post_meeting_checks/<%= @post_meeting_check.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_post_meeting_check/<%= @post_meeting_check.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
