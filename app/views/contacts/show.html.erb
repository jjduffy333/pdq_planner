<div class="page-header">
  <h3>Contact #<%= @contact.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @contact.user.present? %>
          <a href="/users/<%= @contact.user_id %>">
            <%= @contact.user.name %>
          </a>
        <% end %>
      </dd>

      <dt>Contact Name</dt>
      <dd><%= @contact.name %></dd>

      <dt>Photo</dt>
      <dd><img src="<%= @contact.photo %>" class="img-responsive"></dd>

      <dt>Relationship</dt>
      <dd><%= @contact.relationship %></dd>

      <dt>Phone</dt>
      <dd><%= @contact.phone %></dd>

      <dt>Meeting</dt>
      <dd>
        <% if @contact.meeting.present? %>
          <a href="/shared_meetings/<%= @contact.meeting_id %>">
            <%= @contact.meeting.user_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-xs btn-group-justified">
      <a href="/contacts" class="btn btn-default">
        Back
      </a>
      <a href="/contacts/<%= @contact.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_contact/<%= @contact.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
